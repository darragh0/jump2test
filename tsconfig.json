{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["ES2022"],
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "out",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@common/*": ["common/*"],
      "@ext/*": ["ext/*"],
      "@stack/*": ["stack/*"],
      "@impl/*": ["stack/impl/*"]
    }
  },
  "exclude": ["node_modules", ".vscode-test"],
  "include": ["src/**/*", "src/extension.ts"]
}
